---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: #4CAF50;
    --accent-dark: #45a049;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #F6F6F6;
  }
  body {
    margin: 0;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
