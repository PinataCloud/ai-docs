---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- HTML Meta Tags -->
    <title>Pinata AI Docs</title>
    <meta name="description" content="Pinata Docs designed for LLMs">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://ai-docs.pinata.cloud">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Pinata AI Docs">
    <meta property="og:description" content="Pinata Docs designed for LLMs">
    <meta property="og:image" content="https://pinata-ai-docs.vercel.app/og.png">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="ai-docs.pinata.cloud">
    <meta property="twitter:url" content="https://ai-docs.pinata.cloud">
    <meta name="twitter:title" content="Pinata AI Docs">
    <meta name="twitter:description" content="Pinata Docs designed for LLMs">
    <meta name="twitter:image" content="https://pinata-ai-docs.vercel.app/og.png">

  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: #4CAF50;
    --accent-dark: #45a049;
  }
  html {
    font-family: monospace;
    background-color: #FFFFFF;
  }
  body {
    padding: 20px;
    max-width: 500px;
    margin: 0 auto;
  }

  a {
    color: #6d57ff;
    font-weight: bold;
  }

  pre {
    line-break: anywhere;
  }
</style>
